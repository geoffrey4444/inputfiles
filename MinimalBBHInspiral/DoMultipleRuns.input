# Given a directory name, returns the absolute pathname.
sub AbsolutePathToDir {
  my($path)=@_;
  my $pwd=`/bin/pwd`; chomp $pwd;
  chdir($path) || die "Cannot chdir $path";
  $path = `/bin/pwd`; chomp $path;
  chdir($pwd) || die "Cannot chdir $pwd";
  return $path;
}
